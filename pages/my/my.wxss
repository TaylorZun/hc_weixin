.content{
    font-family: "Microsoft YaHei";
}

.hr {
    height: 10rpx;
    background-color: #f5f5f5;
}

.bg {
    width: 100%;
    height: 150rpx;
}

.head {
    display: flex;
    flex-direction: row;
}

.headIcon {
    margin: 20rpx;
}

.headIcon image {
    border-radius: 50%;
}

.name {
    font-size: 30rpx;
    font-weight: bold;
    line-height: 100rpx;
}

.detail {
    font-size: 25rpx;
    position: absolute;
    right: 20rpx;
    line-height: 100rpx;
}

.nav {
    display: flex;
    flex-direction: row;
    text-align: center;
    margin: 0 auto;
}

.nav-item{
    width: 25%;
    font-size: 26rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    margin: 0 auto;
}

.nav-item image{
    width: 63rpx;
    height: 63rpx;
}

.item{
    display: flex;
    flex-direction: row;
}

.order{
    padding-top: 30rpx;
    padding-left: 30rpx;
    padding-bottom: 30rpx;
    font-size: 35rpx;
}

.detail2{
    font-size: 25rpx;
    position: absolute;
    right: 20rpx;
    height: 50rpx;
    line-height: 100rpx;
    color: #888888;
}

.xian{
    border: 5rpx solid #cccccc;
    opacity: 0.2;
}